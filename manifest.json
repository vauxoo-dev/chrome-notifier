{
  "manifest_version": 2,
  "name": "OpenERP Notifications",
  "description": "This extension shows number of notifications that certain user has on OpenERP",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "main.html"
  },
  "permissions": [
    "storage",
    "<all_urls>",
    "tabs",
    "notifications"
  ],
  "content_scripts":[
  {
  "matches": ["<all_urls>"],
  "js": [
         "scripts/jquery-2.0.3.min.js",
         "scripts/underscore-min.js",
         "scripts/backbone-min.js"
         ]
  }
  ]
}
